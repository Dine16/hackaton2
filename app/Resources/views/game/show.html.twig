{% extends 'base.html.twig' %}

{% block body %}
    <h1>Game</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Teamone</th>
                <td>{{ game.teamOne }}</td>
            </tr>
            <tr>
                <th>Teamtwo</th>
                <td>{{ game.teamTwo }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if game.date %}{{ game.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ game.score }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ game.status }}</td>
            </tr>
            <tr>
                <th>Nbpool</th>
                <td>{{ game.nbPool }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('game_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
